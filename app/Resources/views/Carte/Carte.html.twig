        <div class="row">
            {% for categorie in categories %}
            <div class="col-sm-4 ">
                <h2>{{ categorie.nom }}</h2>
                {% for carte in categorie.cartes %}

                    <h5>{{ carte.nom }} ({{ carte.origine }})</h5>
                    <h5>{{ carte.prix }}â‚¬</h5>
                    <p>{{ carte.description }}</p>
                {% endfor %}
            </div>
            {% endfor %}
        </div>




</div>

{% endblock %}