{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/css/carte.css') }}">
{% endblock %}

{% block content %}

    <div id="carousel" class="carousel slide carousel-fade" data-ride="carousel">
        <ol class="carousel-indicators">
            {% for i, image in diapos %}
                <li data-target="#carousel" data-slide-to="{{ i }}" {% if i==0 %}class="active"{% endif %}></li>
            {% endfor %}
        </ol>

        <div class="carousel-inner">
            {% for i,image in diapos %}
                <div class="{% if i==0 %}active{% endif %} item">
                    <img src="{{ vich_uploader_asset(image, 'imageFile') }}"/>
                </div>
            {% endfor %}
        </div>

        <a class="left carousel-control" href="#carousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#carousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>

<div class="container">
